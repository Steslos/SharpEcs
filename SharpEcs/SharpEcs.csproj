<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Platforms>x64</Platforms>
    <RootNamespace>SharpEcs</RootNamespace>
    <AssemblyName>SharpEcs</AssemblyName>
    <OutputType>Library</OutputType>
    <Version>1.0.2</Version>
    <Authors>Steslos</Authors>
    <Description>Entity-component-system library for C# applications and games.</Description>
    <Copyright>2020 Steslos</Copyright>
    <PackageProjectUrl>https://github.com/Steslos/SharpEcs</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Steslos/SharpEcs</RepositoryUrl>
    <RepositoryType>Library</RepositoryType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <OutputPath>bin\x64-Debug\</OutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
    <OutputPath>bin\x64-Release\</OutputPath>
  </PropertyGroup>

</Project>
